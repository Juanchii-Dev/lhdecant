{
  "name": "lhdecant",
  "version": "1.0.0",
  "description": "LH Decants - Tienda de Perfumes",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch server/index.ts",
    "client:dev": "cd client && npm run dev",
    "build": "npm run server:build",
    "server:build": "tsc -p tsconfig.server.json --skipLibCheck --noEmitOnError --noImplicitAny --noImplicitReturns --noImplicitThis --noUnusedLocals --noUnusedParameters",
    "client:build": "cd client && npm run build",
    "start": "node dist/index.js",
    "postinstall": "npm run server:build"
  },
  "keywords": [
    "perfumes",
    "ecommerce",
    "react",
    "nodejs",
    "firebase",
    "stripe"
  ],
  "author": "Juanchii-Dev",
  "license": "MIT",
  "dependencies": {
    "@stripe/stripe-js": "^2.4.0",
    "axios": "^1.6.0",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "firebase-admin": "^11.11.0",
    "helmet": "^7.1.0",
    "nanoid": "^5.0.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "stripe": "^13.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-local": "^1.0.38",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": "18.x"
  }
}
