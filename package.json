{
  "name": "lhdecant",
  "version": "1.0.0",
  "description": "LH Decants - Tienda de Perfumes",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch server/index.ts",
    "client:dev": "cd client && npm run dev",
    "build": "npm run server:build && chmod +x scripts/build-client.sh && ./scripts/build-client.sh",
    "server:build": "tsc -p tsconfig.server.json --skipLibCheck",
    "client:build": "cd client && npm run build",
    "start": "node dist/index.js",
    "build:prod": "npm run build",
    "start:prod": "NODE_ENV=production npm start",
    "check:prod": "node scripts/check-production.js",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "perfumes",
    "ecommerce",
    "react",
    "nodejs",
    "firebase",
    "stripe"
  ],
  "author": "Juanchii-Dev",
  "license": "MIT",
  "dependencies": {
    "@stripe/stripe-js": "^2.4.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/express-session": "^1.17.10",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-local": "^1.0.38",
    "@types/stripe": "^8.0.416",
    "axios": "^1.6.0",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-session": "^1.17.3",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.2.0",
    "nanoid": "^5.0.0",
    "nodemailer": "^6.10.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "stripe": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": "20.x"
  }
}
